<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Product Catlog</h1>
<% @products.each do |p| %>
<div class="entry">
    <%= image_tag(p.image) %>
    <h3><%= p.name %></h3>
    <p><%= sanitize(p.description) %></p>
    <div class="price_line">
        <span class="price"><%= p.price %></span>
    </div>
    <%= button_to 'View Product', view_path(product_id: p), class: 'add_to_cart' %>
    <%= button_to 'Add to Cart', lineitems_path(product_id: p), class: 'add_to_cart', remote:true %>
</div>  
<% end %>